<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="contactmanager.al_quddusislamicapp.SelectOption"
    android:id="@+id/ab"
    android:weightSum="1"
    android:background="#ffe8ffe0">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ALLAH(swt) said:"
        android:id="@+id/textView3"
        android:layout_weight="0.26"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="539dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="&quot;Therefore Remember ME, I will remember you and be Grateful to me and never be ungrateful to ME&quot;"
        android:id="@+id/textView4"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="21dp"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Posters"
        android:id="@+id/button2"
        android:layout_gravity="bottom"
        android:layout_weight="0.26"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40 quick, easy and rewarding good deeds to do everyday in Ramadan_files"
        android:id="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:text="Virtues of Prayer"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:background="#ffbeffe8" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:text="Supplication"
        android:id="@+id/button6"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:background="#ffbeffe8" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="fill_parent"
        android:id="@+id/imageView4"
        android:src="@mipmap/mosque"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:text="More Queries"
        android:id="@+id/button8"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffbeffe8" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

