<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Bismillah"
    android:background="#ff6f7476"
    android:id="@+id/a">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start with Bismillah"
        android:id="@+id/button"
        android:layout_above="@+id/button7"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:background="#a3e5dc63"
        android:transitionName="@string/abc_action_bar_home_description"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AL-QUDDUS ISLAMIC APP"
        android:id="@+id/textView2"
        android:singleLine="false"
        android:textSize="25dp"
        android:layout_marginBottom="83dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/main"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
